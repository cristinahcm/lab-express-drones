<h2>Update the drone</h2>
<form action="/drones/{{_id}}/edit" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <input required maxlength="250" type="text" class="form-control" id="name" name="name" value="{{name}}">
  </div>
  <div class="mb-3">
    <label for="propellers" class="form-label">Propellers</label>
    <input required type="text" class="form-control" id="image" name="image" value="{{image}}">
  </div>

  <div class="mb-3">
    <label for="maxSpeed" class="form-label">Max Speed</label>
    <input type="text" class="form-control" id="Weight" name="weight" value="{{weight}}">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<h2>Available drones</h2>

  <div> 
{{#each drones}}
    <h2>{{this.name}}</h3>
    <p>{{this.propellers}}</p>
    <p>{{this.maxSpeed}}</p>
      <a href="/drones/{{this._id}}/edit" class="btn btn-primary">Edit drone</a>
      <form action="/drones/{{this._id}}/delete" method="post">
      <button class="btn btn-danger" type="submit">Delete drone</button>
      </form>
{{/each}}
  </div>

<a href="/drones/create" class="btn btn-primary createBtn">Create new drone</a> 
